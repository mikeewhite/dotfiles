###############################################################
# go
###############################################################
# panic parse
alias pp="$GOPATH/bin/pp"
alias gt="go test -timeout 3s ./... |& pp"
alias gogen="echo 'generating package files...' && go generate ./pkg/..."
alias golint="golangci-lint run"

# Does a clean build and test, updating the vendor folder if applicable 
function goall {
  echo -e "\033[0;33mRemoving old files \033[0m"
  find grpcgen -iname '*pb.go' -exec rm -v {} \;

  echo -e "\033[0;33mGenerating autogenerated Go files \033[0m"
  go generate ./... 
  
  echo -e "\033[0;33mRunning linter \033[0m"
  golangci-lint run 
  
  echo -e "\033[0;33mRunning go build \033[0m"
  go mod tidy && go build 
  
  echo -e "\033[0;33mRunning go test \033[0m"
  go test ./... -p 1 -count=1

  [ -d "vendor" ] && echo -e "\033[0;33mUpdate vendor folder \033[0m" && go mod vendor
  
  go mod tidy
  echo -e "\033[0;33mFinished \033[0m"
}


